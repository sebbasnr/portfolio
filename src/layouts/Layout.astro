  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      // Cargar lottie-web dinámicamente
      const loadLottie = () => {
        return new Promise((resolve) => {
          if (window.lottie) {
            resolve(window.lottie);
            return;
          }
          
          const script = document.createElement('script');
          script.src = 'https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.12.2/lottie.min.js';
          script.onload = () => resolve(window.lottie);
          script.onerror = (err) => {
            console.error('Error loading Lottie:', err);
            resolve(null);
          };
          document.head.appendChild(script);
        });
      };

      // Inicializar animación del botón de configuración
      const initSettingsAnimation = async () => {
        const settingsIcon = document.getElementById('settings-nav-icon');
        if (!settingsIcon) {
          console.warn('settings-nav-icon element not found');
          return;
        }

        try {
          const lottie = await loadLottie();
          if (!lottie) {
            console.error('Failed to load Lottie');
            return;
          }

          const animation = lottie.loadAnimation({
            container: settingsIcon,
            renderer: 'svg',
            loop: false,
            autoplay: false,
            path: '/animated-icons/system-regular-63-settings-cog-hover-cog-1.json'
          });

          window.settingsAnimation = animation;
          
          const updateIconColor = (forceColor = null) => {
            const isLightTheme = document.body.classList.contains('light-theme');
            const color = isLightTheme ? '#000000' : '#FBFBFB';
            const inactiveColor = isLightTheme ? '#333333' : '#C3C3C4';
            
            const svg = settingsIcon.querySelector('svg');
            if (svg) {
              const elements = svg.querySelectorAll('path, g, rect, circle, polygon, line');
              elements.forEach(el => {
                el.removeAttribute('style');
                
                const isBackground = el.getAttribute('fill') === '#000000' || 
                                   el.getAttribute('stroke') === '#000000' ||
                                   el.getAttribute('fill') === '#ffffff' ||
                                   el.getAttribute('stroke') === '#ffffff';
                
                if (isBackground) {
                  el.style.stroke = 'none';
                  el.style.fill = 'none';
                } else {
                  const currentColor = forceColor || 
                                    (settingsIcon.matches(':hover') || settingsIcon.closest('a').matches(':hover')) 
                                    ? color : inactiveColor;
                  
                  el.setAttribute('stroke', currentColor);
                  el.setAttribute('fill', currentColor);
                  el.style.stroke = currentColor;
                  el.style.fill = currentColor;
                  
                  el.removeAttribute('class');
                }
              });
              
              svg.style.color = isLightTheme ? '#333333' : '#C3C3C4';
              svg.style.transition = 'color 0.2s ease';
            }
          };

          const settingsLink = settingsIcon.closest('.nav-link');
          if (settingsLink) {
            settingsLink.addEventListener('mouseenter', () => {
              animation.goToAndPlay(0);
            });
            
            settingsLink.addEventListener('mouseenter', updateIconColor);
            settingsLink.addEventListener('mouseleave', updateIconColor);
          }

          updateIconColor();
          window.updateIconColor = updateIconColor;
          
          const observer = new MutationObserver(updateIconColor);
          observer.observe(document.body, { 
            attributes: true, 
            attributeFilter: ['class'],
            childList: false,
            subtree: false
          });
          
          const themeToggle = document.getElementById('theme-toggle');
          if (themeToggle) {
            themeToggle.addEventListener('click', () => {
              setTimeout(updateIconColor, 10);
            });
          }
          
        } catch (error) {
          console.error('Error initializing settings animation:', error);
        }
      };

      // Iniciar la animación
      initSettingsAnimation();
    });
  </script>
  
